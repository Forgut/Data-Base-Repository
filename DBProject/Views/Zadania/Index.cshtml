@model IEnumerable<DBProject.Models.Zadania>

@{
    ViewBag.Title = "Zadania";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Dodaj nowe", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Czas_wykonania)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faktyczny_czas_wykonania)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produkty.Nazwa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @if (!item.Zakończone)
        {
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Czas_wykonania)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Faktyczny_czas_wykonania)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produkty.Nazwa)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
            @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
        </td>
        }
    </tr>
}

</table>
